            img14.setRuta("/imagenes/java3.jpg");
            img14.setEvento(evento5);
            imagenes.add(img14);

            // AQUI SE VERIFICA QUE NO EXISTAN ANTES DE CUARDAR PARA EVITAR DUPLICADOS
            for (Imagenes img : imagenes) {
                if (imagenRepository.findByRuta(img.getRuta()).isEmpty()) {
                    imagenRepository.save(img);
                }
            }